// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Release {
  id Int @id
  title String
  artist String?
  genres ReleaseGenre[]  
  styles ReleaseStyle[]
}

model ReleaseGenre {
  id        Int     @id @default(autoincrement())
  release Release @relation(fields: [releaseId], references: [id])
  releaseId Int
  genre String
}

model ReleaseStyle {
  id        Int     @id @default(autoincrement())
  release Release @relation(fields: [releaseId], references: [id])
  releaseId Int
  style String
}